<turbo-frame id="blogs_container" class="blogs_container">

    <div class="blog">
        <div class="form">
                <%= form_with(model: @event, local: true) do |f|%>
                <%= f.label :title %>
                <%= f.text_field :title %>
                <%= f.label "description" %>
                <%= f.text_area :body %>
                <%= f.label :location %>
                <%= f.text_field :location %>
                <%= f.label :starts_at %>
                <%= f.datetime_field :starts_at %>
                <%= f.submit nil, class: "form-btn"%>
            <% end %>
        </div>
    </div>

    <% @events.each do |e|%>
        <%= render "shared/event", event: e%>
    <% end %>

</turbo-frame>